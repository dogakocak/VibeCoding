{
    "Logging":  {
                    "LogLevel":  {
                                     "Default":  "Debug",
                                     "Microsoft.AspNetCore":  "Information"
                                 }
                },
    "Postgres":  {
                     "ConnectionString":  "Host=localhost;Port=5432;Database=vibecoding;Username=postgres;Password=postgres",
                     "EnableDetailedErrors":  true,
                     "EnableSensitiveLogging":  true
                 },
    "Redis":  {
                  "ConnectionString":  "localhost:6379",
                  "InstanceName":  "vibecoding-dev",
                  "DefaultSlidingWindowSeconds":  30,
                  "DefaultPermitLimit":  60
              },
    "AzureBlob":  {
                      "ConnectionString":  "UseDevelopmentStorage=true",
                      "ContainerName":  "media",
                      "AssetReadExpiryMinutes":  30,
                      "AssetWriteExpiryMinutes":  30
                  },
    "Jwt":  {
                "Issuer":  "VibeCoding",
                "Audience":  "VibeCodingClients",
                "SecretKey":  "DEV_SECRET_USE_USER_SECRETS",
                "AccessTokenLifetimeMinutes":  120,
                "RefreshTokenLifetimeDays":  14
            },
    "Telemetry":  {
                      "EnableApplicationInsights":  false,
                      "InstrumentationKey":  null,
                      "UserHashSalt":  "local-dev-salt"
                  },
    "Admin":  {
                  "Email":  "admin@local.test",
                  "Password":  "Passw0rd!"
              }
}
