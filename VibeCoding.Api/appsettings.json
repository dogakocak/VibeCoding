{
    "Logging":  {
                    "LogLevel":  {
                                     "Default":  "Information",
                                     "Microsoft.AspNetCore":  "Warning"
                                 }
                },
    "AllowedHosts":  "*",
    "Postgres":  {
                     "ConnectionString":  "Host=postgres;Port=5432;Database=vibecoding;Username=postgres;Password=postgres",
                     "EnableDetailedErrors":  false,
                     "EnableSensitiveLogging":  false
                 },
    "Redis":  {
                  "ConnectionString":  "redis:6379",
                  "InstanceName":  "vibecoding",
                  "DefaultSlidingWindowSeconds":  60,
                  "DefaultPermitLimit":  30
              },
    "AzureBlob":  {
                      "ConnectionString":  "UseDevelopmentStorage=true",
                      "ContainerName":  "media",
                      "AssetReadExpiryMinutes":  10,
                      "AssetWriteExpiryMinutes":  15
                  },
    "Jwt":  {
                "Issuer":  "VibeCoding",
                "Audience":  "VibeCodingClients",
                "SecretKey":  "CHANGE_ME_IN_PRODUCTION",
                "AccessTokenLifetimeMinutes":  60,
                "RefreshTokenLifetimeDays":  7
            },
    "Telemetry":  {
                      "EnableApplicationInsights":  false,
                      "InstrumentationKey":  null,
                      "UserHashSalt":  "changeme"
                  },
    "Admin":  {
                  "Email":  "",
                  "Password":  ""
              }
}
